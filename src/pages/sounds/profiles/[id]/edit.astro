---
import Layout from '../../../../layouts/Layout.astro';
import ProfileForm from '../../../../components/ProfileForm.astro';
import { getSoundProfiles } from '../../../../utils/profileUtils';

const { id } = Astro.params;
const profiles = await getSoundProfiles();
const profile = profiles.find(p => p.id === id);

if (!profile) {
  return Astro.redirect('/sounds');
}
---

<Layout title="Edit Sound Profile | Story Mode">
  <main class="min-h-screen bg-gray-100 py-12">
    <div class="max-w-3xl mx-auto px-4">
      <h1 class="text-6xl font-editorial mb-12">Edit Sound Profile</h1>
      <ProfileForm mode="edit" profile={profile} />
    </div>
  </main>
</Layout>