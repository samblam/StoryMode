---
// A static version of DataExporter without client hydration
const { surveyId } = Astro.props;
---

<div class="data-exporter">
  <a
    href={`/api/surveys/${surveyId}/export?format=csv`}
    class="export-button flex items-center px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
    download
  >
    <span class="text-gray-600">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
    </span>
    <span class="ml-2">Export CSV</span>
  </a>
</div>