import { supabase } from '../../lib/supabase';

interface Props {
    surveyId: string;
    initialMappings?: {
        soundId: string;
        intended_function: string;
        order: number;
    }[];
}

const { surveyId, initialMappings = [] } = Astro.props;

import type { Database } from '../../types/database';
type Sound = Database['public']['Tables']['sounds']['Row'];

// Initialize empty arrays for sounds and functions
let sounds: Sound[] = [];
let functions: { id: string; description: string; }[] = [];

try {
    // First fetch the survey to get its sound profile ID
    const { data: profileData, error: profileError } = await supabase
        .from('surveys')
        .select('sound_profile_id')
        .eq('id', surveyId)
        .single<{ sound_profile_id: string }>();

    if (profileError) {
        console.error('Error fetching survey:', profileError);
        throw profileError;
    }

    if (!profileData?.sound_profile_id) {
        console.error('Survey has no sound profile assigned');
        throw new Error('Survey has no sound profile assigned');
    }

    // Fetch sounds for this specific profile
    const { data: soundsData, error: soundsError } = await supabase
        .from('sounds')
        .select('id, name, description, file_path, storage_path, created_at, profile_id')
        .eq('profile_id', profileData.sound_profile_id)
        .order('name');

    if (soundsError) {
        console.error('Error fetching sounds:', soundsError);
        throw soundsError;
    }

    sounds = soundsData || [];

    // Fetch survey functions
    const { data: functionData, error: functionError } = await supabase
        .from('surveys')
        .select('functions')
        .eq('id', surveyId)
        .single<{ functions: string[] }>();

    if (functionError) {
        console.error('Error fetching functions:', functionError);
        throw functionError;
    }

    functions = (functionData?.functions || []).map((func: string) => ({
        id: func,
        description: func
    }));

    // Fetch survey functions from the survey record
    const { data: surveyData, error: surveyError } = await supabase
        .from('surveys')
        .select('functions')
        .eq('id', surveyId)
        .single();

    if (surveyError) {
        console.error('Error fetching survey functions:', surveyError);
    } else if (surveyData && Array.isArray(surveyData.functions)) {
        // Transform the functions array into the expected format
        functions = surveyData.functions.map(func => ({
            id: func,
            description: func
        }));
    }

    console.log('Fetched sounds:', sounds);
    console.log('Fetched functions:', functions);
} catch (error) {
    console.error('Error in data fetching:', error);
}

