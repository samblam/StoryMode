// src/components/admin/ParticipantManager.astro
import { useState } from 'react';

interface ParticipantManagerProps {
  surveyId: string;
}

const ParticipantManager = (props: ParticipantManagerProps) => {
  const [activeTab, setActiveTab] = useState<'manual' | 'csv' | 'json'>('manual');

  const tabs = ['manual', 'csv', 'json'];

  return (
    <div class="mb-6">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Participant Management</h2>
      
      <div class="border-b border-gray-200">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          {tabs.map((tab) => (
            <button
              key={tab}
              id={`${tab}-tab`}
              class={`border-b-2 border-transparent text-gray-500 hover:text-blue-700 hover:border-blue-700 whitespace-nowrap py-4 px-1 font-medium text-sm ${
                activeTab === tab ? 'active border-blue-500 text-blue-500' : ''
              }`}
              aria-controls={`${tab}-panel`}
              role="tab"
              onClick={() => setActiveTab(tab as 'manual' | 'csv' | 'json')}
            >
              {tab.charAt(0).toUpperCase() + tab.slice(1) + ' Upload'}
            </button>
          ))}
        </nav>
      </div>

      <div id="tabs-content">
        {tabs.map((tab) => (
          <div
            key={tab}
            id={`${tab}-panel`}
            role="tabpanel"
            aria-labelledby={`${tab}-tab`}
            class={`py-6 ${activeTab !== tab ? 'hidden' : ''}`}
          >
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              {tab.charAt(0).toUpperCase() + tab.slice(1) + ' Upload'}
            </h3>
            {/* Content for each tab */}
          </div>
        ))}
      </div>
    </div>
  );
};

export default ParticipantManager;